<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.appdev.spideradtask4.MovieUno">

    <TextView
        android:id="@+id/genreUno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Genre"
        android:padding="4dp"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_above="@+id/ratingUno"
        android:layout_alignStart="@+id/ratingUno"
        android:layout_marginBottom="31dp" />

    <TextView
        android:id="@+id/ratingUno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rating:"
        android:padding="4dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/typeUno" />

    <ImageView
        android:id="@+id/posterUno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/typeUno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type:"
        android:padding="4dp"
        android:textAlignment="textStart"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginStart="41dp"
        android:layout_below="@+id/ratingUno"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/plotUno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plot:"
        android:textAlignment="textEnd"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/typeUno"
        android:layout_alignStart="@+id/typeUno"
        android:padding="4dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Director:"
        android:textAlignment="textEnd"
        android:id="@+id/directorUno"
        android:layout_above="@+id/ratingUno"
        android:layout_alignStart="@+id/genreUno"
        android:padding="4dp"/>

</RelativeLayout>
