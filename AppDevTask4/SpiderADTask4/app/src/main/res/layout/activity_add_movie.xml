<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.appdev.spideradtask4.AddMovie">

    <ImageView
        android:id="@+id/addImg"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_launcher" />

    <Button
        android:id="@+id/addBtn"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:layout_above="@+id/addPlot"
        android:layout_toEndOf="@+id/addImg" />

    <EditText
        android:id="@+id/addTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Title:"
        android:ems="9"
        android:layout_alignTop="@+id/addBtn"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/addGenre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Genre:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/addType"
        android:layout_alignEnd="@+id/addRat"
        android:layout_marginTop="34dp" />

    <TextView
        android:id="@+id/addRat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rating:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/addGenre"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/addType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="47dp"
        android:layout_below="@+id/addPlot"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/addPlot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plot:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
